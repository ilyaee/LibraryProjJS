<form method="POST" class="mt-5">
    <div class="form-group">
        <label for="inputTitle">Название</label>
        <input type="text"
               value="<%= books.title %>"
               name="title"
               class="form-control"
               id="inputTitle">
    </div>

    <div class="form-group">
        <label for="inputDesc">Описание</label>
        <textarea
                rows="3"
                name="description"
                class="form-control"
                id="inputDesc"
        ><%= books.description %></textarea>
    </div>

    <div class="form-group">
        <label for="inputDesc">Автор</label>
        <textarea
                rows="3"
                name="authors"
                class="form-control"
                id="inputDesc"
        ><%= books.authors %></textarea>
    </div>

    <div class="form-group text-right ">
        <button type="submit" class="btn btn-primary">Сохранить</button>
    </div>
</form>